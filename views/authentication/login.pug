extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet" href="/css/admin.css")

block content
  main
    if errorMessage
      .user-message__error #{errorMessage}
    form.form-container(action="/login" method="POST")
      .form-control
        label(for="email") E-mail
        input(
          class=(errorFields.includes('email') ? 'invalid' : undefined)
          type="text" 
          name="email" 
          id="email" 
          value=(oldInput.email))
      .form-control
        label(for="password") Password
        input(
          class=(errorFields.includes('password') ? 'invalid' : undefined)
          type="password" 
          name="password" 
          id="password" 
          value=(oldInput.password))
      .margin-bottom
        a(href='/reset-password' class='link') Reset password
      input(type='hidden' name='_csrf' value=csrfToken)
      button(type="submit") Login
