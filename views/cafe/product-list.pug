extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/admin.css")

block content
  main
    if products.length > 0
      .grid
        each product in products
          article.card.product-item
            header.card__header
              h1.product__title #{product.name}
            .card__image
              img(src="/images/cafe.jpeg", alt="presentation")
            .card__content
              h2.product__price $3.50
              p.product__description A rich and velvety cafe au lait, made from a blend of sustainably grown and sourced coffee beans
            .card__actions  
              button.btn Add to cart
    else
      h1 Sorry, we have no products available at the moment
